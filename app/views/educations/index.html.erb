<h1>Listing educations</h1>

<table>
  <thead>
    <tr>
      <th>School name</th>
      <th>Field of study</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Degree</th>
      <th>Activities</th>
      <th>Notes</th>
      <th>Full profile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @educations.each do |education| %>
      <tr>
        <td><%= education.school_name %></td>
        <td><%= education.field_of_study %></td>
        <td><%= education.start_date %></td>
        <td><%= education.end_date %></td>
        <td><%= education.degree %></td>
        <td><%= education.activities %></td>
        <td><%= education.notes %></td>
        <td><%= education.full_profile_id %></td>
        <td><%= link_to 'Show', education %></td>
        <td><%= link_to 'Edit', edit_education_path(education) %></td>
        <td><%= link_to 'Destroy', education, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

