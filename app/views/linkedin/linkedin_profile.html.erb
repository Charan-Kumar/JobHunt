<div class="row">
  <div class="span4">
    <div class="thumbnail">
      <%= image_tag(@basic_profile.picture_url, style:"float: left;margin: 5px;") %>
      <h3><%=best_in_place @basic_profile, :formatted_name %></h3>
      <h4><%=best_in_place @basic_profile, :headline %></h4>
      <h4><%=best_in_place @basic_profile, :industry %></h4>
      <br>
      <p><%=best_in_place @basic_profile, :summary,:as => :input, :nil => "Click me to add Summary" %></p>
  </div>
  <div class="span4">
    <div class="well">
      <h4>Interests</h4>
      <p><%= best_in_place @full_profile, :interests, :as => :input, :nil => "Click me to add Interests" %></p>
      <br>
      <h4>Associations</h4>
      <p><%= best_in_place @full_profile, :associations, :as => :input, :nil => "Click me to add Associations" %></p>
      <br>
      <h4>Honors</h4>
      <p><%= best_in_place @full_profile, :honors, :as => :input, :nil => "Click me to add Honors" %></p>
      <br>
      <h4>Skills</h4>
      <% if ! @skills.nil? %>
        <% @skills.each do |s| %>
          <%= link_to s.name, edit_skill_path(s) %>
        <% end %>
      <% end %><br>
      <%= link_to "Add Skill", new_skill_path() %>
      <br>
    </div>
  </div>
  <div class="span4">
    <div class="well">
      <h4>Contact Info</h4>
      <p>Email: <%= @user.email  %></p>
      <p>Phone Numbers:
      <%if  !@phone.nil?%> 
        <%= best_in_place @phone, :phone_number,:as => :input, :nil => "Click me to add Phone"%></p>
      <%end%>
      <p>Address:
      <%if ! @address.nil?%>
        <%= best_in_place @address, :address, :as => :textarea, :nil => "Click me to add Address" %></p>
      <%end%>
      <br>
    </div>
  </div>
</div>

<div class="row" style="margin-top: 16px;">
  <div class="span10">
  <h1>Industry</h1>
    <table class="table table-striped">
      <tr>
        <th>Title</th>
        <th>Summary</th>
        <th>Company Name</th>
        <th>Is Current</th>
        <th></th>
      </tr>
      <% @positions.each do |p| %>
       <tr>
         <th><%= p.title %></th>
         <th><%= p.summary %></th>
         <th><%= p.company %></th>
         <th><%= p.is_current.to_s.capitalize %></th>
         <th><%= link_to 'Edit', edit_position_path(p) %></th>
       </tr>
      <% end %>
  </table>
  </div>
</div>

<div class="row" style="margin-top: 16px;">
  <div class="span10">
    <h1>Education</h1>
    <table class="table table-striped">
      <tr>
    <th>School Name</th>
    <th>Field of Study</th>
    <th>Degree</th>
    <th>Activities</th>
    <th>Notes</th>
    <th></th>
      </tr>
      <% @educations.each do |e| %>
    <tr>
      <th><%= e.school_name %></th>
      <th><%= e.field_of_study %></th>
      <th><%= e.degree %></th>
      <th><%= e.activities %></th>
      <th><%= e.notes %></th>
      <th><%= link_to 'Edit', edit_education_path(e) %></th>
    </tr>
      <% end %>
    </table>
  </div>
</div>

